.inst-box
  %header
    = f.label :social_media
    %span.desc
      = t('.description')
  = field_set_tag do
    .form-group
      = f.label :twitter
      .row
        .col-sm-6
          = f.url_field :twitter, required: false, maxlength: 255, class: 'form-control'
    .form-group
      = f.label :facebook
      .row
        .col-sm-6
          = f.url_field :facebook, required: false, maxlength: 255, class: 'form-control'
    .form-group
      = f.label :linkedin
      .row
        .col-sm-6
          = f.url_field :linkedin, required: false, maxlength: 255, class: 'form-control'
